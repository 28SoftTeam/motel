<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"       
        android:orientation="vertical" >

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >
 
    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg"
        android:layout_marginRight="5dip">
 
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/ic_launcher" />
 
    </LinearLayout>
 
    <!-- otel ad-->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="The Marmara"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>
 	<!-- Otel Yıldız -->
    <ImageView 
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:src="@drawable/ic_5stars"
       android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"/>
    
    <!-- Adres-tel -->

    
    <!-- Otel Bölge -->
    <TextView
        android:id="@+id/bolge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="[Otel Bölge]" />
 
    <!-- otel-kod -->
    <TextView
        android:id="@+id/kod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bolge"
        android:gravity="right"
        android:text=""
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:textSize="10dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"/> 
</RelativeLayout>

<LinearLayout
    android:id="@+id/desclayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textview_layout"
    android:layout_marginTop="2dip"
    android:layout_marginRight="2dip"
    android:layout_marginLeft="2dip"
    android:padding="3dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="@string/otel_adres" 
        style="@style/textview_text"
        />

  

</LinearLayout>

</LinearLayout>

    </ScrollView>